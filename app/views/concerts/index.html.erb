<p id="notice"><%= notice %></p>

<h1>Concerts</h1>
<div class="container">
<table class="container ">
  <thead>
    <tr>
      <th>Group</th>
      <th>Concert</th>
      <th>Assistant</th>
      
    </tr>
    
  </thead>
  <th colspan="3"></th>
  <tbody>
    <% @concerts.each do |concert| %>
      <tr>
        <td><%= concert.group.name %></td>
        <td><%= concert.concert %></td>
        <td><%= concert.assistant %></td>
        <td><%= link_to 'Show', concert %></td>
        <td><%= link_to 'Edit', edit_concert_path(concert) %></td>
        <td><%= link_to 'Destroy', concert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'New Concert', new_concert_path %>
